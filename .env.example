# Django settings
# Secret key for the Django application
SECRET_KEY="your-new-secret-key"
# Enable debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=127.0.0.1,localhost

# Django Database Settings
# Database engine for Django
DB_ENGINE=django.db.backends.postgresql
# Database name for Django
DB_NAME=example_db
# Database username for Django
DB_USER=example_user
# Database password for Django
DB_PASSWORD=example_password

# Use 'localhost' for local development or 'db' if using Docker Compose
# Host for Django to connect to the database
DB_HOST=localhost
# Port for Django to connect to the database
DB_PORT=5432

# Docker PostgreSQL Settings
# PostgreSQL user created by Docker
POSTGRES_USER=example_user
# PostgreSQL password created by Docker
POSTGRES_PASSWORD=example_password
# PostgreSQL database created by Docker
POSTGRES_DB=example_db

# Email settings
# Email backend (e.g., SMTP, console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# SMTP server hostname
EMAIL_HOST="smtp.example.com"
# SMTP server port (e.g., 587 for TLS)
EMAIL_PORT=587
# Use TLS for secure connection
EMAIL_USE_TLS=True
# SMTP username (email address)
EMAIL_HOST_USER=your-email@example.com
# SMTP password
EMAIL_HOST_PASSWORD=your-email-password
